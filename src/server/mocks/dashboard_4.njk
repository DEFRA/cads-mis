<script>
  document.addEventListener('DOMContentLoaded', function () {
    document.getElementById('os-year').textContent = new Date().getFullYear();

    const apiKey = '97RSCqCjaAT68LDVbfDZs0qhVKLblVJ8';

    const style = {
      "version": 8,
      "sources": {
        "os-outdoor": {
          "type": "raster",
          "tiles": [
            "https://api.os.uk/maps/raster/v1/zxy/Outdoor_3857/{z}/{x}/{y}.png?key=" + apiKey
          ],
          "tileSize": 256
        }
      },
      "layers": [
        {
          "id": "os-outdoor-layer",
          "type": "raster",
          "source": "os-outdoor"
        }
      ]
    };

    const map = new maplibregl.Map({
      container: 'holding-direction-map',
      style: style,
      center: [-2.5, 54.3],
      zoom: 5.5,
      minZoom: 5,
      maxZoom: 18,
      maxBounds: [
        [-10.76418, 49.528423],
        [1.9134116, 61.331151]
      ],
      attributionControl: false
    });

    map.dragRotate.disable();
    map.touchZoomRotate.disableRotation();

    map.addControl(new maplibregl.NavigationControl({
      showCompass: false
    }));

    const holdings = [
      {name: 'Index holding (this holding)', lon: -2.95, lat: 54.9, type: 'both'},
      {name: 'On-only source holding', lon: -1.5, lat: 53.8, type: 'on'},
      {name: 'On-only source holding', lon: -3.1, lat: 56.1, type: 'on'},
      {name: 'Off-only destination holding', lon: -1.2, lat: 52.6, type: 'off'},
      {name: 'Off-only destination holding', lon: -2.0, lat: 55.2, type: 'off'},
      {name: 'Both on/off holding', lon: -3.6, lat: 51.7, type: 'both'}
    ];

    function colourForDirection(type) {
      if (type === 'on') return '#1d70b8';
      if (type === 'off') return '#f47738';
      if (type === 'both') return '#28a197';
      return '#b1b4b6';
    }

    holdings.forEach(h => {
      new maplibregl.Marker({color: colourForDirection(h.type)})
        .setLngLat([h.lon, h.lat])
        .setPopup(new maplibregl.Popup({offset: 8})
          .setHTML(`<strong>${h.name}</strong>`))
        .addTo(map);
    });
  });
</script>

