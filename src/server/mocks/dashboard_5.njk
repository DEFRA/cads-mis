{% extends 'layouts/page.njk' %}

{% block content %}
  {{ appHeading({
    text: 'Journey',
    caption: "Haulier"
  }) }}




<body class="govuk-template__body">
<script>document.body.className += ' js-enabled';</script>
<!-- GOV.UK Frontend CSS -->
<link href="https://cdn.jsdelivr.net/npm/govuk-frontend@5.13.0/dist/govuk/govuk-frontend.min.css"
      rel="stylesheet">

<!-- OS branding + MapLibre GL -->
<link href="https://cdn.jsdelivr.net/gh/OrdnanceSurvey/os-api-branding@latest/os-api-branding.css"
      rel="stylesheet">
<link href="https://unpkg.com/maplibre-gl@5.7.1/dist/maplibre-gl.css"
      rel="stylesheet">

<link href="/public/assets/css/dashboard_5.css" rel="stylesheet"/>


<div class="govuk-width-container">

  <main class="govuk-main-wrapper govuk-!-padding-top-3 govuk-!-padding-bottom-3">

    <!-- FILTERS -->
    <section aria-label="Filters" class="govuk-!-margin-bottom-3">

      <!-- Row 1: reset + three fields -->
      <div class="govuk-grid-row dashboard-filter-row">
        <div class="govuk-grid-column-one-quarter">
          <button class="govuk-button govuk-button--secondary govuk-!-margin-bottom-2"
                  type="button">
            Reset filters
          </button>
        </div>

        <div class="govuk-grid-column-one-quarter">
          <div class="govuk-form-group">
            <label class="govuk-label" for="filter-journey-date">Journey date</label>
            <input class="govuk-input" id="filter-journey-date"
                   value="07/09/2023 – 07/09/2023">
          </div>
        </div>

        <div class="govuk-grid-column-one-quarter">
          <div class="govuk-form-group">
            <label class="govuk-label" for="filter-vehicle-reg">Vehicle registration</label>
            <input class="govuk-input" id="filter-vehicle-reg" value="AT05COW">
          </div>
        </div>

        <div class="govuk-grid-column-one-quarter">
          <div class="govuk-form-group">
            <label class="govuk-label" for="filter-haulier-name">Haulier name</label>
            <select class="govuk-select" id="filter-haulier-name">
              <option>All</option>
              <option>Example Haulage Ltd</option>
            </select>
          </div>
        </div>
      </div>

      <!-- Row 2: haulage company -->
      <div class="govuk-grid-row dashboard-filter-row govuk-!-margin-top-2">
        <div class="govuk-grid-column-one-half">
          <div class="govuk-form-group">
            <label class="govuk-label" for="filter-haulage-company">Haulage company</label>
            <select class="govuk-select" id="filter-haulage-company">
              <option>All</option>
              <option>Border Livestock Haulage</option>
            </select>
          </div>
        </div>
      </div>
    </section>

    <!-- MAIN ROW -->
    <section aria-label="Journey summary, map and animals">
      <div class="govuk-grid-row">

        <!-- Journey summary -->
        <div class="govuk-grid-column-one-third">
          <div class="govuk-summary-card govuk-!-margin-bottom-3">
            <div class="govuk-summary-card__title-wrapper">
              <h2 class="govuk-summary-card__title">Journey summary</h2>
            </div>
            <div class="govuk-summary-card__content dashboard-card-body">

              <div class="dashboard-summary-metrics">
                <div class="dashboard-summary-metric">
                  <p class="govuk-body-s govuk-!-margin-bottom-0">Holdings</p>
                  <p class="govuk-heading-m govuk-!-margin-bottom-0">3</p>
                </div>
                <div class="dashboard-summary-metric">
                  <p class="govuk-body-s govuk-!-margin-bottom-0">Vehicles</p>
                  <p class="govuk-heading-m govuk-!-margin-bottom-0">1</p>
                </div>
                <div class="dashboard-summary-metric">
                  <p class="govuk-body-s govuk-!-margin-bottom-0">Sheep</p>
                  <p class="govuk-heading-m govuk-!-margin-bottom-0">87</p>
                </div>
              </div>

              <p class="govuk-body-s govuk-!-margin-top-2 govuk-!-margin-bottom-1">
                <strong>Holdings</strong> | Vehicles
              </p>

              <table class="govuk-table govuk-table--small-text-until-tablet">
                <thead class="govuk-table__head">
                <tr class="govuk-table__row">
                  <th class="govuk-table__header" scope="col">Loaded / unloaded</th>
                  <th class="govuk-table__header" scope="col">Vehicle reg</th>
                  <th class="govuk-table__header" scope="col">Movement date</th>
                  <th class="govuk-table__header" scope="col">Holding no.</th>
                </tr>
                </thead>
                <tbody class="govuk-table__body">
                <tr class="govuk-table__row">
                  <td class="govuk-table__cell">Loaded &amp; unloaded</td>
                  <td class="govuk-table__cell">AT05COW</td>
                  <td class="govuk-table__cell">07/09/2023</td>
                  <td class="govuk-table__cell">06/111/0339</td>
                </tr>
                <tr class="govuk-table__row">
                  <td class="govuk-table__cell">Loaded</td>
                  <td class="govuk-table__cell">AT05COW</td>
                  <td class="govuk-table__cell">07/09/2023</td>
                  <td class="govuk-table__cell">12/345/6789</td>
                </tr>
                <tr class="govuk-table__row">
                  <td class="govuk-table__cell">Unloaded</td>
                  <td class="govuk-table__cell">AT05COW</td>
                  <td class="govuk-table__cell">07/09/2023</td>
                  <td class="govuk-table__cell">36/784/0003</td>
                </tr>
                </tbody>
              </table>

            </div>
          </div>
        </div>

        <!-- Map -->
        <div class="govuk-grid-column-one-third">
          <div class="govuk-summary-card govuk-!-margin-bottom-3">
            <div class="govuk-summary-card__title-wrapper">
              <h2 class="govuk-summary-card__title">Journey map</h2>
            </div>
            <div class="govuk-summary-card__content dashboard-card-body">

              <div id="journey-map"></div>

              <div aria-label="Map legend" class="dashboard-map-legend">
                <div class="dashboard-legend-item">
                  <span class="dashboard-legend-swatch legend-loaded"></span>
                  <span class="govuk-body-s">Loaded</span>
                </div>
                <div class="dashboard-legend-item">
                  <span class="dashboard-legend-swatch legend-unloaded"></span>
                  <span class="govuk-body-s">Unloaded</span>
                </div>
                <div class="dashboard-legend-item">
                  <span class="dashboard-legend-swatch legend-both"></span>
                  <span class="govuk-body-s">Both</span>
                </div>
                <div class="dashboard-legend-item">
                  <span class="dashboard-legend-swatch legend-unmapped"></span>
                  <span class="govuk-body-s">Unmapped holdings: 3</span>
                </div>
              </div>

              <p class="govuk-body-s">
                Contains OS data © Crown copyright and database right
                <span id="os-year-journey"></span>.
              </p>

            </div>
          </div>
        </div>

        <!-- Animals in movement -->
        <div class="govuk-grid-column-one-third">
          <div class="govuk-summary-card govuk-!-margin-bottom-3">
            <div class="govuk-summary-card__title-wrapper">
              <h2 class="govuk-summary-card__title">Animals in movement</h2>
            </div>
            <div class="govuk-summary-card__content dashboard-card-body animals-table-wrapper">

              <table class="govuk-table govuk-table--small-text-until-tablet">
                <thead class="govuk-table__head">
                <tr class="govuk-table__row">
                  <th class="govuk-table__header" scope="col">Movement</th>
                  <th class="govuk-table__header" scope="col">Animal ID</th>
                  <th class="govuk-table__header" scope="col">Species</th>
                  <th class="govuk-table__header" scope="col">Count</th>
                </tr>
                </thead>
                <tbody class="govuk-table__body">
                <tr class="govuk-table__row">
                  <td class="govuk-table__cell">1916714</td>
                  <td class="govuk-table__cell">UK 0 105839 01956</td>
                  <td class="govuk-table__cell">Sheep</td>
                  <td class="govuk-table__cell">1</td>
                </tr>
                <!-- repeat / extend rows as required -->
                </tbody>
              </table>

            </div>
          </div>
        </div>

      </div>
    </section>

  </main>
</div>

<footer class="govuk-footer" role="contentinfo">
  <div class="govuk-width-container">
    <div class="govuk-footer__meta">
      <div class="govuk-footer__meta-item govuk-footer__meta-item--grow">
        <p class="govuk-footer__licence-description">
          Central Animal Data Service – prototype dashboard
        </p>
      </div>
    </div>
  </div>
</footer>

<script src="https://cdn.jsdelivr.net/gh/OrdnanceSurvey/os-api-branding@latest/os-api-branding.js"></script>
<script src="https://unpkg.com/maplibre-gl@5.7.1/dist/maplibre-gl.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    document.getElementById('os-year-journey').textContent = new Date().getFullYear();

    const apiKey = '97RSCqCjaAT68LDVbfDZs0qhVKLblVJ8';

    const style = {
      version: 8,
      sources: {
        'os-outdoor': {
          type: 'raster',
          tiles: [
            'https://api.os.uk/maps/raster/v1/zxy/Outdoor_3857/{z}/{x}/{y}.png?key=' + apiKey
          ],
          tileSize: 256
        }
      },
      layers: [
        {
          id: 'os-outdoor-layer',
          type: 'raster',
          source: 'os-outdoor'
        }
      ]
    };

    const map = new maplibregl.Map({
      container: 'journey-map',
      style: style,
      center: [-2.5, 54.0],
      zoom: 5.7,
      minZoom: 5,
      maxZoom: 18,
      maxBounds: [
        [-10.76418, 49.528423],
        [1.9134116, 61.331151]
      ],
      attributionControl: false
    });

    map.dragRotate.disable();
    map.touchZoomRotate.disableRotation();
    map.addControl(new maplibregl.NavigationControl({showCompass: false}));

    const points = [
      {name: 'Origin holding (loaded)', lon: -3.0, lat: 55.0, type: 'loaded'},
      {name: 'Intermediate holding (both)', lon: -2.4, lat: 54.3, type: 'both'},
      {name: 'Destination holding (unloaded)', lon: -2.0, lat: 53.8, type: 'unloaded'}
    ];

    function colourForStatus(type) {
      if (type === 'loaded') return '#1d70b8';
      if (type === 'unloaded') return '#f47738';
      if (type === 'both') return '#28a197';
      return '#b1b4b6';
    }

    points.forEach(p => {
      new maplibregl.Marker({color: colourForStatus(p.type)})
        .setLngLat([p.lon, p.lat])
        .setPopup(new maplibregl.Popup({offset: 8}).setHTML('<strong>' + p.name + '</strong>'))
        .addTo(map);
    });
  });
</script>

</body>
{% endblock %}
