<script src="https://cdn.jsdelivr.net/gh/OrdnanceSurvey/os-api-branding@latest/os-api-branding.js"></script>
<script src="https://unpkg.com/maplibre-gl@5.7.1/dist/maplibre-gl.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const yearSpan = document.getElementById('os-year-zonal');
    if (yearSpan) {
      yearSpan.textContent = new Date().getFullYear();
    }

    const apiKey = '97RSCqCjaAT68LDVbfDZs0qhVKLblVJ8';

    const style = {
      version: 8,
      sources: {
        'os-outdoor': {
          type: 'raster',
          tiles: [
            'https://api.os.uk/maps/raster/v1/zxy/Outdoor_3857/{z}/{x}/{y}.png?key=' + apiKey
          ],
          tileSize: 256
        }
      },
      layers: [
        {
          id: 'os-outdoor-layer',
          type: 'raster',
          source: 'os-outdoor'
        }
      ]
    };

    const map = new maplibregl.Map({
      container: 'zonal-map',
      style: style,
      center: [-2.5, 54.3],
      zoom: 5.7,
      minZoom: 5,
      maxZoom: 18,
      maxBounds: [
        [-10.76418, 49.528423],
        [1.91341, 61.331151]
      ],
      attributionControl: false
    });

    map.dragRotate.disable();
    map.touchZoomRotate.disableRotation();
    map.addControl(new maplibregl.NavigationControl({showCompass: false}));

    const holdings = [
      {name: 'Holding of interest', lon: -1.6, lat: 54.9, type: 'index'},
      {name: 'Inside zone', lon: -1.3, lat: 54.7, type: 'inside'},
      {name: 'Inside zone', lon: -1.8, lat: 54.6, type: 'inside'},
      {name: 'Outside zone', lon: -3.0, lat: 55.5, type: 'outside'},
      {name: 'Outside zone', lon: -2.7, lat: 53.4, type: 'outside'}
    ];

    function colourForZone(type) {
      if (type === 'index') return '#1d70b8';
      if (type === 'inside') return '#28a197';
      if (type === 'outside') return '#f47738';
      return '#b1b4b6';
    }

    holdings.forEach(function (h) {
      new maplibregl.Marker({color: colourForZone(h.type)})
        .setLngLat([h.lon, h.lat])
        .setPopup(new maplibregl.Popup({offset: 8})
          .setHTML('<strong>' + h.name + '</strong>'))
        .addTo(map);
    });
  });
</script>

